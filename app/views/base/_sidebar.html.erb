<script>
// ajax update info
// Đợi tài liệu được tải hoàn thành trước khi thực hiện bất kỳ hành động nào
document.addEventListener("DOMContentLoaded", function() {
  // Tạo một yêu cầu AJAX
  var xhr = new XMLHttpRequest();
  
  // Thiết lập phương thức và URL của yêu cầu
  xhr.open("GET", "/user/get_info", true);
  
  // Xác định hàm xử lý khi nhận được phản hồi từ máy chủ
  xhr.onload = function () {
    if (xhr.status >= 200 && xhr.status < 300) {
      // Nếu yêu cầu thành công, lấy dữ liệu JSON từ phản hồi
      var responseData = JSON.parse(xhr.responseText);
      
      // Hiển thị username trong phần tử HTML có id là "username"
      document.getElementById("info").innerText = responseData.username + " | " + responseData.balance + " " + responseData.wallet;
    } else {
      // Xử lý lỗi nếu có
      console.error('Request failed with status:', xhr.status);
    }
  };
  
  // Xử lý lỗi kết nối
  xhr.onerror = function () {
    console.error('Request failed');
  };
  
  // Gửi yêu cầu
  xhr.send();
});



</script>